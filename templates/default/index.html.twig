{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}

    
    <h3>
        Liste des {% count(articles) %} articles
        {% if draft %}
            en mode brouillon
        {% else %}
            publiés
        {% endif %}
    </h3>

       <ul>
        {% for article in articles %}
            <li><a href="{{ path('vue_article', { 'id':article.id }) }}">{{ article.titre }}</a>
                <span>posté le {{ article.createdDate|date('d/m/Y') }}</span>
            </li>
        {% endfor %}
    </ul>


{% endblock %}
